# Repeat for each forwarded zone.
zone "<my.zone.com>" IN {
    type slave;
    # Verify cache location for your distro.
    file "/var/cache/bind/<my.zone>db";
    # IP's of your AD DNS server(s).
    masters {
        <IP>;
    };
};

logging {
    channel default_log {
    file "/var/log/named/default" versions 3 size 20m;
    print-time yes;
    print-category yes;
    print-severity yes;
    severity debug;
    };

};

